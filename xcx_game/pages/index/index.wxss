/**index.wxss**/

.content{
  width: 100%;
  height: 100vh;
  background: #203561;
}
.ball{
  position: absolute;
  background: #fff;
  border-radius: 100%;
}
.score{
  position: fixed;
  width: 100%;
  height: 100vh;
  z-index: 99;
  top: 0;
  left: 100%;
  transition: all .3s linear;
  overflow: auto;
}

.act{
  background: #FF7D45;
}
.time{
  position: fixed;
  text-align: center;
  top: 0px;
  color: #fff;
  font-size: 36rpx;
  width:100%;
}
canvas{
    position: fixed;     
    left: 120%;     
    width: 414px;
    height: 672px; 
}
.canvas{
     height: 736px;  
     /* position: static;    */
     /* left: 0;    */
}

.fail{
  padding: 1px;
  text-align: center;
  background: #B8C5E3;
  position: relative;
  min-height: 100vh;
}
.bg{
  width: 100%;
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
}
.nr{
  position: relative;
  z-index: 99;
  color: #FFF;
}
.avatar{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin:60rpx auto 30rpx;
  border-radius: 100%;
  border: 2px solid B8C5E3;
}
.level{
  width: 500rpx;
  line-height: 100rpx;
  font-size: 60rpx;
  text-align: center;
  margin: 40rpx auto;
  position: relative;
}
.level text{
  position: relative;
  z-index: 99;
  font-weight: 600;
}
.level image{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.myrank{
  font-weight: 600;
  font-size: 30rpx;
}
.des{
  color: #243559;
  font-size: 36rpx;
  margin:100rpx auto 20rpx;
  /* line-height: 30px; */
}
.des text{
  display: block;
  margin-top: 6px;
}
.img{
  width: 200rpx;
  display: inline-block;
  margin: 0 15rpx;
  border-radius: 5px;
  border: 2px solid #FFF;
}
.bottom{
  margin-top: 50rpx;
}
.bottom view{
  display: inline-block;
   margin: 0 10rpx; 
  color: #243559;
  font-size: 30rpx;
  width: 180rpx;
}
.bottom button{
  width: 100rpx;
  height: 100rpx;
  border: none;
  background: none;
  padding: 0;
  line-height: inherit;
  margin-bottom: 20rpx;
}
.bottom image{
  width: 100rpx;
  height: 100rpx;
}
.bottom .normal{
  display: block;
}
.bottom .press{
  display: none;
}
.bottom button:active .press{
  display: block;
}
.bottom button:active .normal{
  display: none;
}
.fail_1{
  width: 100%;
  height: 100vh;
  background: rgba(32,53,97,.9);
  color: #fff;
  padding: 1px;
  text-align: center;
}
.tips{
  width: 540rpx;
  display: block;
  margin:45% auto 100rpx;
}
.fail_1 view{
  display: inline-block;
  width: 120rpx;
  color: #FFF;
  font-size: 30rpx;
  margin: 0 40rpx;
}
.fail_1 view image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10px;
}

.next{
  height: 100vh;
  background: #B8C5E3;
  padding-top: 45%;
  color: #203561;
  font-size: 60rpx;
  text-align: center;
}
.next image{
  width: 240rpx;
  height: 240rpx;
  display: block;
  margin:0 auto 30rpx;
}
.tg{
  width: 600rpx;
  margin:120rpx auto 0;
  position: relative;
}
.tg image{
  width: 600rpx;
}
.tg text{
  position: absolute;
   left: 50rpx; 
  color: #203561;
  font-size: 28rpx;
  width: 500rpx;
  top: 180rpx;
  text-align: left;
  line-height: 50rpx;
}
.tg .nickName{
  font-size: 24rpx;
  top: 120rpx;
}
.tg .date{
  font-size: 24rpx;
  text-align: right;
  top: 300rpx;
}
movable-view{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 9999;
}
movable-view image{
  width: 100%;
  height: 100%;
}
.prop{
  width: 100%;
  height: 100%;
  position: fixed;
  background: #111C33;
  top: 0;
  left: 0;
  z-index: 99;
  text-align: center;
  padding-top: 150rpx;
}
.prop image{
  width: 100%;
}
.prop button{
  width:320rpx;
  height:92rpx;
  background:rgba(255,255,255,1);
  border-radius:46rpx;
  color: #203561;
  font-size: 36rpx;
  line-height: 92rpx;
}

.box{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-top: 30px;
}
.new_ball{
  /* float: left; */
   /* width: 50px;  */
   height: 50px; 
  position: relative;
     /* border: 1px solid red;    */
}
.new_ball text{
  border-radius: 100%;
  background: #eee;
  position: absolute;
  /* top: 0;  
   left: 0; 
