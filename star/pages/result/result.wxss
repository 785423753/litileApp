/* pages/result/result.wxss */
.content{
    position: relative;
    z-index: 99;
    /* padding: 1px 55rpx; */
}
.star{
  width: 50%;
  display: inline-block;
  padding-left: 140rpx;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  color: #B8BCCC;
  font-size: 20rpx;
  position: relative;
  
}
.star image{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 40rpx;
  left: 10rpx;
}
.nr>text{
  display: block;
  margin-bottom: 7rpx;
}
.white{
  color: #fff;
  margin-bottom: 16rpx !important;
}
.white text{
  color: #FF33BB;
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 3px;
}
.share{
  width:280rpx;
  height:88rpx;
  background:#B8BCCC;
  border-radius:44rpx;
  color: #080E1A;
  font-size: 32rpx;
  line-height: 88rpx;
  margin: auto;
  border: 1px solid #080E1A;
  position: fixed;
  bottom: 20px;
  left: 0;
  right: 0;
}
canvas{
   position: fixed; 
   right: 120%; 
}
swiper{
  height: 90vh;
  width: 100%;
  text-align: center;
}
.title{
  width: 200rpx;
  height: 60rpx;
  margin: 60rpx auto 40rpx;
}
.part{
  position: relative;
  /* width: 585rpx; */
  margin: auto;
}
.part image{
  width: 100%;
  border-radius: 10px;
}
.zw{
  position: absolute;
  top: 52%;
  color: #292B33;
  font-size: 28rpx;
  width: 100%;
}
swiper-item{
  width: 70vw !important; 
  left: 15vw !important;
  padding: 0 40rpx;
  box-sizing: border-box;
   top: 60rpx; 
   opacity: .5; 
}
.act{
   padding: 0rpx; 
   top: 0; 
   opacity: 1; 
}
.age {
  font-size: 32rpx;
  margin: 30rpx 0;
}
.age text{
  color: #FF33BB;
  font-size: 72rpx;
}