/* pages/pic/pic.wxss */

.result{
  width: 100%;
  height: 100vh;
  padding: 0 20px;
}
.result>image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.black{
  width: 100%;
  height: 200px;
  margin: 30px auto;
  /* padding: 40px 10px; */
  position: relative;
}
.black image{
  width: 100%;
}
.black text{
  position: absolute;
  top: 0px;
  bottom: 0;
  margin: auto;
  left: 0px;
  z-index: 99;
  display: inline-block;
  color: #FFF;
  text-align: center;
  line-height: 40px;
  font-size: 24px;
  width: 100%;
  height: 100%;
  padding:50px 20px 15px;
  box-sizing: border-box;
}

.footer{
  position: fixed;
  width: 100%;
  height: 100px;
  background: #000;
  opacity: .9;
  color: #fff;
  z-index: 99;
  bottom: 0;
}
.footer image{
  width: 50px;
  height: 50px;
}
.footer text{
  display: inline-block;
  line-height: 100px;
  font-size: 15px;
  padding: 0 10px;
}
.footer button{
  display: inline-block;
  width: 100px;
  background: none;
  height: 50px;
  position: relative;
   top: 20px; 
}
canvas{
    position: absolute;  
      right: 100%;          
  
}
.title{
  display: block;
  font-size: 30px;
  color: #1A1A1A;
  margin-bottom: 10px;
  font-weight: 600;
  position: relative;
  z-index: 99;
  border-bottom: 1px solid #A29782;
  padding: 40px 10px 20px;
}
.title text{
  display: block;
}

.name{
  position: relative;
  z-index: 99;
  font-size: 18px;
  color: #1E5152;
  margin-top: 40px;
  font-weight: 600;
  padding: 0 10px;
}

@media(max-width:320px){
  .black text{
    font-size: 18px;
    padding-top: 30px;
  }
  .title{
    font-size: 20px;
  }
}