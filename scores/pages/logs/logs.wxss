.footer{
  position: fixed;
  width: 100%;
  height: 100px;
  background: #000;
  opacity: .9;
  color: #fff;
  z-index: 999;
  bottom: 0;
}
.footer image{
  width: 50px;
  height: 50px;
}
.footer text{
  display: inline-block;
  line-height: 100px;
  font-size: 15px;
  padding: 0 10px;
}
.footer button{
  display: inline-block;
  width: 100px;
  background: none;
  height: 50px;
  position: relative;
   top: 20px; 
}
.result{
  width: 100%;
  height: 100vh;
  padding: 1px 0;
}
.result image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.result view{
  position: relative;
  z-index: 99;
}
.title{
  color: #1A1A1A;
  font-size: 22px;
  text-align: center;
  margin-top: 50px;
}
.title text{
  color: #E03F2D;
}
.h1{
  font-size: 40px;
  color: #E03F2D;
  text-align: center;
  margin-top: 10px;
  font-weight: 600;
}
.black{
  width: 300px;
  height: 170px;
  margin: 50px auto;
  padding: 40px 0;
}
.black text{
  position: relative;
  z-index: 99;
  display: block;
  color: #FFF;
  text-align: center;
  line-height: 40px;
  font-size: 24px;
  /* padding: 0 40px; */
}
canvas{
    position: absolute;  
      right: 100%;       
  
}
.title_1{
  margin-top:27px;height:29px;font-weight:600
}
.title_2{
  margin-top:18px
}


@media (max-width:320px){
  .title{
    font-size: 18px;
    margin-top: 40px;
  }
    .title_1{
      margin-top: 10px;
    }
    .title_2{
      margin-top: 15px;
    }
    .h1{
      font-size: 36px;
      margin: 0;
    }
    .black{
      height: 140px;
      padding: 20px 0;
    }
    .black text{
      font-size: 20px;
    }
