/* pages/base/base.wxss */
.content{
  min-height: 100vh;
  position: relative;
  width: 100%;
}
.bg{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.logo,.logo1{
  width:300px;display:block;margin:auto;
  position: relative;
  z-index: 99;
}
.logo1{
  width: 180px;
  margin-top: 30px;
  margin-bottom: 40px;
}

.btn{
  width: 250px;
  height: 50px;
  margin:20px auto;
  position: relative;
  background: none;
  z-index: 99;
  border: none;
  outline: none;
}
.btn image{
  width: 100%;
  position: absolute; 
  top: 0;
  left: 0;
}
.normal{
  z-index: 1;
}
.act{
  z-index: -1;
}
