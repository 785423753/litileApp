/**index.wxss**/
.container{
  width: 100%;
  min-height: 100vh;
  /* background: url(https://pic.huodongjia.com/static/images/niuniu/bg.jpg) no-repeat; */
  /* background-size: 100% 100%; */
  font-size: 16px;
  padding: 10px 0;
  margin: 0;
  position: relative;
}
.bg{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.logo{
  width:300px;display:block;margin:auto;
  position: relative;
  z-index: 99;
}
picker{
  width: 300px;
  height: 50px;
  background: #1E5152;
  margin:0 auto 20px;
  border-radius: 10px;
  border: 2px solid #1A1A1A;
  position: relative;
  z-index: 99;
}
.picker{
  line-height: 50px;
  color: #fff; 
  padding: 0 15px;
  position: relative;
}
.picker text{
  color: #7A9899;
}
.picker image{
  position: absolute;
  width: 20px;
  height: 20px;
  right: 15px;
  top: 15px;
}
.input{
  width: 300px;
  height: 125px;
  background: #1E5152;
  margin:0 auto 40px;
  border-radius: 10px;
  border: 2px solid #1A1A1A;
  color: #7A9899;
  padding: 15px;
  position: relative;
  z-index: 99;
}
.input input{
  width: 150px;
  border: none;
  outline: none;
  border-bottom: 2px solid rgba(122, 153, 153, 0.5);
  height: 68px;
  font-size: 50px;
  color:#fff;
  padding: 10px 0;
   
}
.btn{
  width: 250px;
  height: 50px;
  margin: auto;
  position: relative;
  background: none;
  z-index: 99;
  border: none;
  outline: none;
}
.btn image{
  width: 100%;
  position: absolute; 
  top: 0;
  left: 0;
}
.normal{
  z-index: 1;
}
.act{
  z-index: -1;
}
.btn:active .act{
  z-index: 1;
}
.btn:active .normal{
  z-index: -1;
  /* display: none; */
}

.tips{
  position: fixed;
  width: 100%;
  height: 100vh;
  background: #0f2526;
  opacity: .9;
  z-index: 999;
  top: 0;
  left: 0;
}
.tips image{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}


@media (max-width:320px){
  picker{
    height: 36px;
  }
  .picker{
    line-height: 36px;
  }
  .logo{
    width: 200px;
  }
  .input{
    height: 100px;
  }
  .input input{
    height: 50px;
    font-size: 30px;
  }
  .picker image{
    top: 10px;
  }
}
.top{
  width: 100%;
  box-sizing: border-box;
  /* height: 50px; */
  padding: 10px;
  background: #FFF1D3;
  color: red;
  font-size: 14px;
  position: fixed;
  top: 0;
  left: 0;
  padding-right: 35px;
   z-index: 100;
}
.top text{
  position: absolute;
  right: 10px;
  top: 10px;
 
}