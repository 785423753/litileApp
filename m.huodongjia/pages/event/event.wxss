@import "/wxParse/wxParse.wxss";
page{
padding-bottom: 55px; 
}
scroll-view{
  height: 100vh;
   
}
.banner{
  width: 100%;
  max-height: 300px;
  display: block;
}
.event_info {
  background: #fff;
  padding: 10px;
}
.event_name{
  font-size: 16px;
  margin-bottom: 10px;
  font-weight: 600;
}
.info_p{
  position: relative;
  padding:0 5px;
  padding-left: 20px;
  font-size: 14px;
  color: #999;
  line-height: 30px;
  /* height: 30px; */
}
.info_p image{
  position: absolute;
  width: 12px;
  max-height: 20px;
  left: 0;
  top: 8px;
}
.scale image{
  width: 15px;
}
.other{
  background: #fff;
  padding: 10px;
  font-size: 12px;
  color: #999;
  margin-top: 10px;
}
.other view{
  padding: 5px 0;
}
.youhui view{
  color: red;
}
.youhui navigator{
  margin-top: 5px;
  display: block;
}
.company {
  padding-left: 70px;
  position: relative;
}
.company text{
  position: absolute;
  left: 10px;
}

.tab{
  /* display: inline-flex; */
  /* justify-content: space-between; */
  background: #fff;
  /* margin-top: 10px; */
  /* width: 100%; */
  padding: 0 10px;
  white-space: nowrap;
  min-width: 100%;
}
.fixed{
  width: 100%;
  position: fixed;
  top: 0px;
  left: 0;
  margin: 0;
  z-index: 999;
  overflow: auto;
}
.tab text{
   display: inline-block; 
  color: #999;
  font-size: 14px;
   line-height: 45px; 
  text-align: center;
  border-bottom: 2px solid #fff;
  transition: all .2s linear;
  padding: 0 5px;
  margin-right: 10px;
  /* width: 100px; */
}
.tab .active{
  border-bottom: 2px solid #4BA8EE;
  color: #4BA8EE;
  display: inline-block;
}
.event_content{
  background: #fff;
  font-size: 14px;
  display: none;
  margin-top: 55px;
}
.article{
  padding: 10px;
}
.article view{
  line-height: 25px;
  font-size: 14px;
  background: #fff;
}
.active{
  display: block;
}
.guess{
  display: inline-flex;
  flex-wrap: wrap;
  justify-content: space-between;
  vertical-align: top;
}
.guess .flex-item{
  width: 45%;
  text-align: center;
  font-size: 14px;
  color: #666;
  padding: 0 5px;
  margin-bottom: 10px;
}
.guess image{
  width: 80px;
  height: 80px;
  border-radius: 100%;
  display: block;
  margin: 0 auto 5px;
}
.guess text{
  display: block;
}

.hot_tag{
  font-size: 16px;
  color: #999;
  padding: 10px; 
  padding-left: 100px;
  position: relative;
  background: #fff;
  margin-bottom: 10px;
}
.hot_tag .tag{
   position: absolute;
   left: 10px;
}
.hot_tag navigator{
  border:1px solid #999;
  color: #999;
  border-radius: 13px;
  display: inline-block;
  line-height: 22px;
  padding: 0 8px;
  font-size: 12px;
  margin-right: 5px;
  margin-bottom: 10px;
}
.rel_title{
  background: #fff;
  padding: 0 10px;
  font-size: 16px;
  line-height: 40px;
}

.footer{
  position: fixed;
  background: #fff;
  height: 50px;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 99;
  display: inline-flex;
  justify-content: space-between;
  box-shadow: 1px 0 8px 2px rgb(238, 238, 238);
}

.footer text{
  display: block;
}
.footer form{
  width: 75%;
}
.apply,.timeout{
  width: 100%;
  background: #4BA8EE;
  color: #fff;
  font-size: 16px;
  text-align: center;
  line-height: 50px;
  border-radius: 0;
}
.timeout{
  background: #eee;
}
.share{
  border: none;
  width: 25%;
  background: none;
}
.share image{
  width: 30px;
  height: 30px;
  margin-top: 10px;
  opacity: .8
}
.share::after{
  border: none;
}

.shortcut{
  width: 40px;
  height: 40px;
  padding: 7px 8px 0;
  text-align: center;
  border: 1px solid #d9d9d9;
  border-radius: 100%;
  background: #fff;
  font-size: 9px;
  color: #666;
  position: fixed;
  bottom:65px;
  right: 10px;
  z-index: 999;
}
.nav{
  bottom: 110px;
}
.bg{
  position: fixed;
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,.5);
  z-index: 999;
  top: 0;
  left: 0;
  transition: all .3s ease-out;
  display: none;
}
.short_nav{
  position: fixed;
  bottom: 65px;
  right: 10px;
  height: auto;
  transition: all .3s ease-out;
  z-index: 999;
  /* height: 0; */
}
.short_nav navigator{
  display: block;
  font-size: 10px;
  color: #fff;
  text-align: center;
  margin-top: 5px;
}
.short_nav view{
  width: 40px;
  height: 40px;
  border-radius: 100%;
  background: #fff;
}
.short_nav image{
  width: 20px;
  height: 20px;
  margin: 10px auto;
  display: block;
}
.short_nav .close{
  margin-top: 20px;
}

.name{
  overflow: auto;
  white-space: pre-wrap;
}