.title{
  font-size: 12px;
  display: block;
  padding: 20px 10px 10px;
  color: #666;
}
.phone{
  width: 100%;
  height: 40px;
  background: #fff;
  font-size: 16px;
  color: #333;
  padding: 0 10px;
}
.search{
  width: 95%;
  display: block;
  margin: 20px auto;
  height: 35px;
  color: #fff;
  font-size: 16px;
  border: none;
  background: #1474D8;
  border-radius: 3px;
  line-height: 35px;
}

/* list */

.order_list{
  width: 100%;
  background: #fff;
  margin:10px auto;
  font-size: 16px;
  color: #666;
  padding:0 15px;
  /*border-top: 1px solid #d7d7d7;*/
  /*border-bottom: 1px solid #d7d7d7;*/
  box-sizing: border-box;
  position: relative;
}
.order_num{
  /* border-bottom:1px dotted #d7d7d7; */
  font-size: 12px;
  color: #999;
  padding-top: 10px;
}
.order_num text{
  display: block;
  line-height: 25px;
}
.order_name{
  color: #000;
  padding: 10px 0;
  font-size: 16px;
}
.addr,.time{
  font-size: 14px;
  color: #666;
  line-height: 25px;
}
.state{
  border-top: 1px dashed #d7d7d7;
  margin: 5px 0;
  line-height: 40px;
  position: relative;
}
.state text{
  margin-right: 20px;
  color: #000;
  font-size: 16px;
  display: inline-block;
}
.e_state{
  width: 40%;
  text-align: right;
  position: absolute;
  right: 0px;
  top: 0px;
}
.back{
  padding: 10px;
  font-size: 14px;
  color: #333;
  background: #fff;
  position: relative;
  padding-left: 40px;
}
.back image{
  width: 50px;
  position: absolute;
  left: 0px;
  top: 4px;
}
.e_state image{
  width: 20px;
  height:20px;
  position: relative;
  left: -7px;
  top: 4px;
}
.order_list::before{
          content:" ";
          position:absolute;
          top:0;
          left:0;
          height: 1px;
					width: 100%;
					background-color: #d7d7d7;
					display: block;
					z-index: 15;
					-webkit-transform-origin: 50% 0;
					transform-origin: 50% 0;
					-webkit-transform: scaleY(.5);
					transform: scaleY(.5);
}
.order_list::after{
          content:" ";
          position:absolute;
          bottom:0;
          left:0;
          height: 1px;
					width: 100%;
					background-color: #d7d7d7;
					display: block;
					z-index: 15;
					-webkit-transform-origin: 50% 0;
					transform-origin: 50% 0;
					-webkit-transform: scaleY(.5);
					transform: scaleY(.5);
}
.order_num::after{
          content:" ";
          position:absolute;
          bottom:0;
          left:0;
          height: 1px;
					width: 100%;
					background-color: #d7d7d7;
					display: block;
					z-index: 15;
					-webkit-transform-origin: 50% 0;
					transform-origin: 50% 0;
					-webkit-transform: scaleY(.5);
					transform: scaleY(.5);
}
.status{
  float: right;
  color: red;
  font-size: 16px;
}
.success{
  color: #1474D8;
}
.fail{
  color: #999;
}
.free{
  color: orange;
  position: relative;
  top: 2px;
}